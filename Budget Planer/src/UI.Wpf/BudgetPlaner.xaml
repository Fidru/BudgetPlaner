                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75" />
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="75" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>

